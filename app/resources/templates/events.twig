{% extends 'layout.twig' %}

{% block main %}
    <h2 class="py-3 text-center">Events</h2>
    <div class="d-flex p-4 justify-content-around">
        {% for event in events %}
            <div class="card" style="width: 18rem;">
                <img src="img/birthdayParty.jpg" class="card-img-top" alt="Birtday Party">
                <div class="card-body">
                    <h5 class="card-title">{{ event.name }}</h5>
                    <p class="card-text">{{ event.description }}</p>
                    <p class="card-text">{{ event.start }}</p>
                    <p class="card-text">{{ event.end }}</p>
                    <a href="event/{{ event.id }}" class="btn btn-primary">learn more</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}